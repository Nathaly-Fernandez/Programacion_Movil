<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnBorrado"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMmas"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="105dp"
        android:layout_toEndOf="@+id/btnIgual"
        android:text="C"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="424dp" />

    <Button
        android:id="@+id/btnSuma"
        style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
        android:layout_width="71dp"
        android:layout_height="61dp"
        android:layout_below="@+id/txtNumero"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@+id/btnResta"
        android:background="#8CB7BD"
        android:text="+"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="317dp" />

    <Button
        android:id="@+id/btnResta"
        style="@android:style/Widget.DeviceDefault.Button.Borderless.Colored"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_below="@+id/txtNumero"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="13dp"
        android:layout_toStartOf="@+id/btnMulti"
        android:background="#8CB7BD"
        android:text="-"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="317dp" />

    <Button
        android:id="@+id/btnDiv"
        style="@android:style/Widget.DeviceDefault.Button.Borderless.Colored"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_below="@+id/txtNumero"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="47dp"
        android:background="#8CB7BD"
        android:text="/"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="274dp"
        tools:layout_editor_absoluteY="317dp" />

    <Button
        android:id="@+id/btnMmenos"
        style="@android:style/Widget.DeviceDefault.Button.Borderless.Colored"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_below="@+id/btnSuma"
        android:layout_alignParentStart="true"
        android:layout_marginStart="77dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="13dp"
        android:layout_toStartOf="@+id/btnMmas"
        android:background="#8CB7BD"
        android:text="M-"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="317dp" />

    <Button
        android:id="@+id/btnMmas"
        style="@android:style/Widget.DeviceDefault.Button.Borderless.Colored"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_below="@+id/btnResta"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="13dp"
        android:layout_toStartOf="@+id/btnM"
        android:background="#8CB7BD"
        android:text="M+"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="316dp" />

    <Button
        android:id="@+id/btnM"
        style="@android:style/Widget.DeviceDefault.Button.Borderless.Colored"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_below="@+id/btnMulti"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="75dp"
        android:background="#8CB7BD"
        android:text="M"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="274dp"
        tools:layout_editor_absoluteY="317dp" />

    <Button
        android:id="@+id/btnIgual"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btnMmenos"
        android:layout_alignParentStart="true"
        android:layout_marginStart="106dp"
        android:layout_marginTop="9dp"
        android:text="="
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="424dp" />

    <Button
        android:id="@+id/btnMulti"
        style="@android:style/Widget.DeviceDefault.Button.Borderless.Colored"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_below="@+id/txtNumero"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="13dp"
        android:layout_toStartOf="@+id/btnDiv"
        android:background="#8CB7BD"
        android:text="*"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="316dp" />

    <EditText
        android:id="@+id/txtNumero"
        android:layout_width="365dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:inputType="number" />

</RelativeLayout>