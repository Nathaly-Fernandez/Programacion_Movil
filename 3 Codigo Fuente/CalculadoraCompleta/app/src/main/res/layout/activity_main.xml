<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5E5B5B"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnEliminar"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="CE"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/btnMmas"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnBorrar"
        app:layout_constraintTop_toBottomOf="@+id/btnMod" />

    <Button
        android:id="@+id/btnDiv"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="/"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnIgual"
        app:layout_constraintTop_toBottomOf="@+id/btnResta"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnNum7"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="7"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNum4" />

    <Button
        android:id="@+id/btnNum8"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="8"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/btnNum5" />

    <Button
        android:id="@+id/btnNum0"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintHorizontal_bias="0.962"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNum8"
        app:layout_constraintVertical_bias="0.004" />

    <Button
        android:id="@+id/btnPunto"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="."
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/btnNum9"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnNum9"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="9"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/btnNum6" />

    <Button
        android:id="@+id/btnResta"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="-"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/btnIgual"
        app:layout_constraintTop_toBottomOf="@+id/btnFactorial" />

    <Button
        android:id="@+id/btnIgual"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:layout_marginEnd="24dp"
        android:text="="
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMmenos"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnMulti"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="*"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/btnSuma"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnSuma"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="+"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/btnPotencia" />

    <Button
        android:id="@+id/btnMmenos"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="24dp"
        android:text="M-"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMmas" />

    <Button
        android:id="@+id/btnFactorial"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="!"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/btnEliminar" />

    <Button
        android:id="@+id/btnPotencia"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="^"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/btnBorrar" />

    <Button
        android:id="@+id/btnNum6"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="6"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/btnNum3" />

    <Button
        android:id="@+id/btnNum5"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="5"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/btnNum2" />

    <Button
        android:id="@+id/btnMmas"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="24dp"
        android:text="M+"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnM" />

    <Button
        android:id="@+id/btnBorrar"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="60dp"
        android:text="C"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/btnMmas"
        app:layout_constraintTop_toBottomOf="@+id/btnSigno" />

    <Button
        android:id="@+id/btnNum3"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="3"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/btnRaiz" />

    <Button
        android:id="@+id/btnNum2"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="2"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/btnLog" />

    <Button
        android:id="@+id/btnMod"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="Mod"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/btnM"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="24dp"
        android:text="M"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/btnRaiz"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="Sqrt"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/btnLog"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="Log"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/btnSigno"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="+/-"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button5"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/txtNumero" />

    <Button
        android:id="@+id/button"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="24dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button5" />

    <Button
        android:id="@+id/button2"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button5" />

    <Button
        android:id="@+id/button3"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintTop_toTopOf="@+id/button5" />

    <Button
        android:id="@+id/button4"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/txtNumero" />

    <Button
        android:id="@+id/button6"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNumero" />

    <Button
        android:id="@+id/button12"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
        android:id="@+id/btnNum1"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button12" />

    <Button
        android:id="@+id/btnNum4"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="4"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNum1" />

    <EditText
        android:id="@+id/txtNumero"
        android:layout_width="346dp"
        android:layout_height="68dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>